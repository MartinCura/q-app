<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailEventActivity">

    <TextView
        android:layout_marginTop="50px"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="Nombre del evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:paddingBottom="40px"
        android:layout_marginTop="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Fecha"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_margin="25px"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:paddingTop="40px"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anfitrion"/>

                <TextView
                    android:paddingBottom="40px"
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Franco"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="25px"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:paddingTop="40px"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invitados"/>

                <TextView
                    android:paddingBottom="40px"
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6 invitados"/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:layout_marginTop="30px"
        android:layout_marginLeft="25px"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inventario"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="25px"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:layout_marginTop="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t- Ingrediente 1 \n\t- Ingrediente 2 \n\t- Ingredeinte 3\n\t..."/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_marginTop="30px"
        android:layout_marginLeft="25px"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posibles comidas"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="25px"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingTop="30px"
            android:paddingBottom="30px"
            android:layout_marginTop="15px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\t1. Comida numero 1 \n\t2. Comida numero 2 \n\t3. Comida numero 3\n\t..."/>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/event_add_person_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20px"
        android:layout_marginRight="40px"
        android:src="@drawable/ic_add"
        />

</LinearLayout>