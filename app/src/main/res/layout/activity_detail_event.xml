<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailEventActivity">

    <TextView
        android:id="@+id/event_detail_title"
        android:layout_marginTop="50px"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textAlignment="center"
        android:text="Nombre del evento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/event_detail_fecha"
        android:paddingBottom="40px"
        android:layout_marginTop="15px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Fecha"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <androidx.cardview.widget.CardView
            android:layout_margin="25px"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:paddingTop="40px"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Anfitrion"/>

                <TextView
                    android:id="@+id/event_detail_host"
                    android:paddingBottom="40px"
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="25px"
            app:cardCornerRadius="8dp"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:paddingTop="40px"
                    android:textColor="@color/colorAccent"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Invitados"/>

                <TextView
                    android:id="@+id/event_detail_number_attendees"
                    android:paddingBottom="40px"
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."/>

            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/event_add_person_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="-100px"
        android:layout_marginRight="40px"
        android:src="@drawable/ic_add"
        />

    <TextView
        android:layout_marginTop="30px"
        android:layout_marginLeft="25px"
        android:textColor="@color/colorAccent"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Posibles comidas"/>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/dynamic_recommendations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <!--<include layout="@layout/recommended_item" />

    <include layout="@layout/recommended_item" />-->


</LinearLayout>