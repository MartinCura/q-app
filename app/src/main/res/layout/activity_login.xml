<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background2_3"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="390dp"
        android:layout_height="510dp"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="10dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="228dp"
            android:layout_height="135dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/logo"
            android:src="@drawable/logo1" />

        <EditText
            android:id="@+id/login_txt_usuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_background"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="15dp"
            android:inputType="textNoSuggestions"
            android:autofillHints="username"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:hint="@string/ac_login_usuario"
            android:textColorHint="@color/grey" />

        <EditText
            android:id="@+id/login_txt_psw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/input_background"
            android:drawableStart="@drawable/ic_lock"
            android:drawablePadding="15dp"
            android:inputType="textPassword"
            android:autofillHints="password"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:hint="@string/ac_login_password"
            android:textColorHint="@color/grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="8dp"
            android:text="@string/ac_login_olvido_password"
            android:textColor="@color/grey"
            android:textStyle="bold"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_btn_ingresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_background"
            android:text="@string/ac_login_ingresar"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/login_btn_nueva_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:background="@drawable/input_background"
            android:text="@string/ac_login_nueva_cuenta"
            android:textColor="@color/grey"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
