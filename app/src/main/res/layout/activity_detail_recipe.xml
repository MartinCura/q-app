<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".DetailRecipeActivity">

        <ImageView
            android:layout_margin="25px"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/wrap"
            />

        <TextView
            android:id="@+id/detail_recipe_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            android:text="Nombre de la comida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">

            <androidx.cardview.widget.CardView
                android:layout_margin="25px"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="40px"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ac_d_recipe_categoria"/>

                    <TextView
                        android:paddingBottom="40px"
                        android:layout_marginTop="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vegetariano"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="25px"
                app:cardCornerRadius="8dp"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:paddingTop="40px"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ac_d_recipe_tiempo"/>

                    <TextView
                        android:paddingBottom="40px"
                        android:layout_marginTop="15px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 minutos"/>

                </LinearLayout>



            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:layout_marginTop="30px"
            android:layout_marginLeft="25px"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ac_d_recipe_ingredientes"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="25px"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/detail_recipe_ingredients"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\t- Ingrediente 1 \n\t- Ingrediente 2 \n\t- Ingredeinte 3\n\t..."/>


        </androidx.cardview.widget.CardView>

<!--        <TextView
            android:layout_marginTop="30px"
            android:layout_marginLeft="25px"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ac_d_recipe_instrucciones"/>

        <androidx.cardview.widget.CardView
            android:layout_margin="25px"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\t1. Paso numero 1 \n\t2. Paso numero 2 \n\t3. Paso numero 3\n\t..."/>

        </androidx.cardview.widget.CardView>-->

        <LinearLayout
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/detail_recipe_add_cart"
                android:layout_marginRight="25px"
                android:layout_marginTop="20px"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="+ Carrito"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/button_background2"/>

            <TextView
                android:id="@+id/detail_recipe_cook"
                android:layout_marginRight="25px"
                android:layout_marginTop="20px"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="@string/ac_d_recipe_cocinar"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/button_background"/>

        </LinearLayout>



    </LinearLayout>
</ScrollView>
