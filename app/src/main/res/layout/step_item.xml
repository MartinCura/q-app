<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/step_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100sp"
        android:text="Paso #"
        android:textSize="30sp"
        android:textColor="@color/grey"
    />

    <TextView
        android:id="@+id/step_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/step_title"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="35dp"
        android:layout_marginVertical="45dp"
        android:text="Instrucciones para hacer el plato bla bla bla bla"
        android:textSize="20sp"
        android:textColor="@color/ginsboro"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/step_btn_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="20dp"
        app:backgroundTint="@color/primary"
        android:text="FINALIZAR"
        android:textSize="16sp"
        android:onClick="finishCooking"
        android:visibility="gone"
        />

</RelativeLayout>
