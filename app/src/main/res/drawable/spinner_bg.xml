<?xml version="1.0" encoding="utf-8"?>
<!-- Based on https://stackoverflow.com/a/46381155/5339846 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">

            <solid
                android:color="@color/dimgrey"
                />

            <corners
                android:radius="10dp"
                />

        </shape>

    </item>

    <item
        android:gravity="center_vertical|right"
        android:right="14dp">

        <layer-list>

            <item
                android:width="12dp"
                android:height="12dp"
                android:gravity="center"
                android:bottom="10dp">

                <rotate
                    android:fromDegrees="45"
                    android:toDegrees="45">

                    <shape android:shape="rectangle">

                        <solid
                            android:color="#ffffff"
                            />

                        <stroke
                            android:color="#ffffff"
                            android:width="1dp"
                            />

                    </shape>
                </rotate>
            </item>
            <item
                android:width="20dp"
                android:height="10dp"
                android:bottom="21dp"
                android:gravity="center">

                <shape
                    android:shape="rectangle">

                    <solid
                        android:color="@color/dimgrey"
                        />

                </shape>

            </item>

        </layer-list>

    </item>

</layer-list>
